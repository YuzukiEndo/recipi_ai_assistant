<div class="bg_pattern Boxes"></div>
<div class="nutrition-log-container">
  <h1 class="nutrition-log-title">今回あなたが摂取した栄養素</h1>
  <%= form_with(model: @nutrition_log, local: true, class: 'nutrition-log-form') do |form| %>
    <%= form.hidden_field :recipe_id, value: @recipe.id %>
    <div class="nutrition-info">
      <p class="nutrition-item"><span class="nutrition-label">カロリー:</span> <span class="nutrition-value"><%= @nutrition_log.calories %> kcal</span></p>
      <p class="nutrition-item"><span class="nutrition-label">タンパク質:</span> <span class="nutrition-value"><%= @nutrition_log.protein %> g</span></p>
      <p class="nutrition-item"><span class="nutrition-label">脂質:</span> <span class="nutrition-value"><%= @nutrition_log.fat %> g</span></p>
      <p class="nutrition-item"><span class="nutrition-label">炭水化物:</span> <span class="nutrition-value"><%= @nutrition_log.carbs %> g</span></p>
      <p class="nutrition-item"><span class="nutrition-label">食物繊維:</span> <span class="nutrition-value"><%= @nutrition_log.fiber %> g</span></p>
    </div>

    <%= form.hidden_field :calories %>
    <%= form.hidden_field :protein %>
    <%= form.hidden_field :fat %>
    <%= form.hidden_field :carbs %>
    <%= form.hidden_field :fiber %>
    <%= form.hidden_field :date %>

    <div class="recipe-form-actions">
      <%= form.button type: 'submit', class: 'recipe-btn-svg nutrition-save-btn' do %>
        <svg class="nutrition-save-btn-svg">
          <rect x="2" y="2" rx="0" fill="none" width="200" height="50"></rect>
        </svg>
        <span class="nutrition-save-btn-text">栄養価情報を保存</span>
      <% end %>
    </div>
  <% end %>
</div>
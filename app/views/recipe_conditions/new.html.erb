<div class="recipe-container">
  <h2>レシピ生成条件設定</h2>
  <%= form_with(url: recipe_conditions_path, local: true, class: 'recipe-form') do |f| %>
    <div class="recipe-form-group">
      <h3>調理時間</h3>
      <div class="radio-group">
        <%= f.radio_button :cooking_time, '短時間', id: 'cooking_time_short' %>
        <%= f.label :cooking_time_short, '短時間' %>
        <%= f.radio_button :cooking_time, '標準', id: 'cooking_time_medium' %>
        <%= f.label :cooking_time_medium, '標準' %>
        <%= f.radio_button :cooking_time, '長時間', id: 'cooking_time_long' %>
        <%= f.label :cooking_time_long, '長時間' %>
      </div>
    </div>
    <div class="recipe-form-group">
      <h3>カテゴリー</h3>
      <div class="radio-group">
        <%= f.radio_button :category, '和風', id: 'category_japanese' %>
        <%= f.label :category_japanese, '和風' %>
        <%= f.radio_button :category, '洋風', id: 'category_western' %>
        <%= f.label :category_western, '洋風' %>
        <%= f.radio_button :category, '中華風', id: 'category_chinese' %>
        <%= f.label :category_chinese, '中華風' %>
      </div>
    </div>
    <div class="recipe-form-group">
      <%= f.text_field :ingredients, class: 'recipe-form-control recipe-js-input', placeholder: ' ' %>
      <%= f.label :ingredients, "食材" %>
    </div>
    <div class="recipe-form-actions">
      <%= button_tag type: 'submit', class: 'recipe-btn-svg' do %>
        <svg>
          <rect x="2" y="2" rx="0" fill="none" width="200" height="50"></rect>
        </svg>
        <span>レシピを生成</span>
      <% end %>
    </div>
  <% end %>
</div>

<div class="bg_pattern Boxes"></div>
<div class="signup-container">
  <h2>新規登録</h2>
  <%= form_with(model: @user, local: true, class: "signup-form") do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control js-input", placeholder: " " %>
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control js-input", placeholder: " " %>
      <%= f.label :password, "パスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control js-input", placeholder: " " %>
      <%= f.label :password_confirmation, "パスワード (確認)" %>
    </div>
    <div class="form-actions">
      <%= f.button type: 'submit', class: 'btn-svg' do %>
        <svg>
          <rect x="2" y="2" rx="0" fill="none" width="200" height="50"></rect>
        </svg>
        <span>登録</span>
      <% end %>
    </div>
  <% end %>
</div>

<div class="login-container">
  <h2>ログイン</h2>

  <%= form_with(url: login_path, local: true, class: "login-form") do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control js-input", placeholder: " " %>
      <%= f.label :email, "メールアドレス" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control js-input", placeholder: " " %>
      <%= f.label :password, "パスワード" %>
    </div>

    <div class="form-actions">
      <a href="#" class="btn-svg" onclick="document.querySelector('.login-form').submit(); return false;">
        <svg>
          <rect x="2" y="2" rx="0" fill="none" width="200" height="50"></rect>
        </svg>
        <span>認証</span>
      </a>
    </div>
  <% end %>
</div>
